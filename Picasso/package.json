{
  "name": "picasso-chat-widget",
  "version": "1.0.0",
  "description": "React-based chat widget with TypeScript support",
  "main": "src/widget.js",
  "type": "module",
  "scripts": {
    "dev": "BUILD_ENV=development node esbuild.config.mjs --serve",
    "dev:staging": "BUILD_ENV=staging node esbuild.config.mjs --serve",
    "dev:production": "BUILD_ENV=production node esbuild.config.mjs --serve",
    "build": "BUILD_ENV=production node esbuild.config.mjs",
    "build:dev": "BUILD_ENV=development node esbuild.config.mjs",
    "build:staging": "BUILD_ENV=staging node esbuild.config.mjs",
    "build:production": "BUILD_ENV=production node esbuild.config.mjs",
    "build:analyze": "ANALYZE=true BUILD_ENV=production node esbuild.config.mjs",
    "clean": "rm -rf dist",
    "deploy:production": "./deploy-production.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "dompurify": "^3.0.8",
    "lucide-react": "^0.544.0",
    "marked": "^16.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/plugin-syntax-import-meta": "^7.10.4",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^29.5.11",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "babel-jest": "^30.2.0",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/longhornrumble/picasso"
  },
  "keywords": [
    "chat",
    "widget",
    "react",
    "typescript",
    "bedrock",
    "ai"
  ],
  "author": "",
  "license": "MIT"
}
