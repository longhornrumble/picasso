{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "BlockAllProductionAccess",
      "Effect": "Deny",
      "Action": "*",
      "Resource": "*",
      "Condition": {
        "StringLike": {
          "aws:RequestTag/Environment": ["prod", "production"],
          "aws:ExistingTag/Environment": ["prod", "production"]
        }
      }
    },
    {
      "Sid": "BlockProductionResourcePatterns",
      "Effect": "Deny",
      "Action": "*",
      "Resource": "*",
      "Condition": {
        "StringLike": {
          "aws:arn": [
            "arn:aws:*:*:*:*prod*",
            "arn:aws:*:*:*:*production*",
            "arn:aws:*:*:*:*-prod-*",
            "arn:aws:*:*:*:*-production-*"
          ]
        }
      }
    },
    {
      "Sid": "AllowProductionReadOnly",
      "Effect": "Allow",
      "Action": [
        "lambda:GetFunction",
        "lambda:ListFunctions",
        "lambda:GetAlias",
        "lambda:ListAliases",
        "s3:GetObject",
        "s3:ListBucket",
        "s3:GetBucketLocation",
        "cloudwatch:GetMetricStatistics",
        "cloudwatch:ListMetrics",
        "logs:GetLogEvents",
        "logs:FilterLogEvents",
        "logs:DescribeLogGroups",
        "logs:DescribeLogStreams"
      ],
      "Resource": "*",
      "Condition": {
        "StringLike": {
          "aws:arn": [
            "arn:aws:*:*:*:*prod*",
            "arn:aws:*:*:*:*production*"
          ]
        }
      }
    },
    {
      "Sid": "LambdaDevStagingOnly",
      "Effect": "Allow",
      "Action": [
        "lambda:CreateFunction",
        "lambda:UpdateFunctionCode",
        "lambda:UpdateFunctionConfiguration",
        "lambda:GetFunction",
        "lambda:ListFunctions",
        "lambda:InvokeFunction",
        "lambda:PublishVersion",
        "lambda:CreateAlias",
        "lambda:UpdateAlias",
        "lambda:GetAlias",
        "lambda:ListAliases",
        "lambda:DeleteFunction",
        "lambda:DeleteAlias",
        "lambda:AddPermission",
        "lambda:RemovePermission",
        "lambda:GetPolicy",
        "lambda:TagResource",
        "lambda:UntagResource",
        "lambda:ListTags",
        "lambda:GetLayerVersion",
        "lambda:ListLayers"
      ],
      "Resource": "*",
      "Condition": {
        "StringNotLike": {
          "lambda:FunctionName": ["*prod*", "*production*"]
        }
      }
    },
    {
      "Sid": "S3DevStagingAccess",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:ListBucket",
        "s3:GetBucketLocation",
        "s3:GetObjectVersion",
        "s3:PutObjectAcl",
        "s3:GetObjectAcl",
        "s3:GetBucketVersioning",
        "s3:ListBucketVersions",
        "s3:GetBucketCors",
        "s3:PutBucketCors",
        "s3:GetBucketPolicy",
        "s3:PutBucketPolicy"
      ],
      "Resource": [
        "arn:aws:s3:::picassostaging",
        "arn:aws:s3:::picassostaging/*",
        "arn:aws:s3:::picassocode", 
        "arn:aws:s3:::picassocode/*",
        "arn:aws:s3:::*-dev-*",
        "arn:aws:s3:::*-dev-*/*",
        "arn:aws:s3:::*-staging-*",
        "arn:aws:s3:::*-staging-*/*",
        "arn:aws:s3:::*-test-*",
        "arn:aws:s3:::*-test-*/*"
      ],
      "Condition": {
        "StringNotLike": {
          "s3:prefix": ["prod/*", "production/*"]
        }
      }
    },
    {
      "Sid": "CloudWatchLogs",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents",
        "logs:DescribeLogGroups",
        "logs:DescribeLogStreams",
        "logs:GetLogEvents",
        "logs:FilterLogEvents",
        "logs:DeleteLogGroup",
        "logs:DeleteLogStream"
      ],
      "Resource": [
        "arn:aws:logs:*:*:log-group:/aws/lambda/*",
        "arn:aws:logs:*:*:log-group:/aws/apigateway/*"
      ]
    },
    {
      "Sid": "CloudFrontManagement", 
      "Effect": "Allow",
      "Action": [
        "cloudfront:CreateInvalidation",
        "cloudfront:GetInvalidation",
        "cloudfront:ListInvalidations",
        "cloudfront:GetDistribution",
        "cloudfront:GetDistributionConfig",
        "cloudfront:ListDistributions",
        "cloudfront:UpdateDistribution"
      ],
      "Resource": "*"
    },
    {
      "Sid": "APIGatewayManagement",
      "Effect": "Allow",
      "Action": [
        "apigateway:GET",
        "apigateway:POST",
        "apigateway:PUT",
        "apigateway:DELETE",
        "apigateway:PATCH",
        "execute-api:Invoke"
      ],
      "Resource": "*"
    },
    {
      "Sid": "IAMRoleManagement",
      "Effect": "Allow", 
      "Action": [
        "iam:GetRole",
        "iam:PassRole",
        "iam:ListRoles",
        "iam:CreateRole",
        "iam:PutRolePolicy",
        "iam:AttachRolePolicy",
        "iam:DetachRolePolicy",
        "iam:GetRolePolicy",
        "iam:ListRolePolicies"
      ],
      "Resource": [
        "arn:aws:iam::*:role/lambda-execution-role*",
        "arn:aws:iam::*:role/picasso-*",
        "arn:aws:iam::*:role/myrecruiter-*"
      ]
    },
    {
      "Sid": "BedrockAccess",
      "Effect": "Allow",
      "Action": [
        "bedrock:InvokeModel",
        "bedrock:ListFoundationModels",
        "bedrock:GetFoundationModel"
      ],
      "Resource": "*"
    },
    {
      "Sid": "SecretsManager",
      "Effect": "Allow",
      "Action": [
        "secretsmanager:GetSecretValue",
        "secretsmanager:DescribeSecret"
      ],
      "Resource": [
        "arn:aws:secretsmanager:*:*:secret:picasso/*",
        "arn:aws:secretsmanager:*:*:secret:myrecruiter/*"
      ]
    },
    {
      "Sid": "CloudFormationAccess",
      "Effect": "Allow",
      "Action": [
        "cloudformation:DescribeStacks",
        "cloudformation:DescribeStackResources",
        "cloudformation:GetTemplate",
        "cloudformation:ListStacks",
        "cloudformation:CreateStack",
        "cloudformation:UpdateStack",
        "cloudformation:DeleteStack"
      ],
      "Resource": [
        "arn:aws:cloudformation:*:*:stack/picasso-*/*",
        "arn:aws:cloudformation:*:*:stack/myrecruiter-*/*"
      ]
    },
    {
      "Sid": "DynamoDBAccess",
      "Effect": "Allow",
      "Action": [
        "dynamodb:GetItem",
        "dynamodb:PutItem",
        "dynamodb:UpdateItem",
        "dynamodb:DeleteItem",
        "dynamodb:Query",
        "dynamodb:Scan",
        "dynamodb:DescribeTable",
        "dynamodb:ListTables"
      ],
      "Resource": [
        "arn:aws:dynamodb:*:*:table/picasso-*",
        "arn:aws:dynamodb:*:*:table/myrecruiter-*"
      ]
    },
    {
      "Sid": "LexAccess",
      "Effect": "Allow",
      "Action": [
        "lex:PostText",
        "lex:PostContent",
        "lex:RecognizeText",
        "lex:RecognizeUtterance"
      ],
      "Resource": "*"
    },
    {
      "Sid": "MonitoringAndMetrics",
      "Effect": "Allow",
      "Action": [
        "cloudwatch:PutMetricData",
        "cloudwatch:GetMetricStatistics", 
        "cloudwatch:ListMetrics",
        "cloudwatch:DescribeAlarms",
        "cloudwatch:PutMetricAlarm"
      ],
      "Resource": "*"
    },
    {
      "Sid": "EC2NetworkInfo",
      "Effect": "Allow",
      "Action": [
        "ec2:DescribeVpcs",
        "ec2:DescribeSubnets",
        "ec2:DescribeSecurityGroups",
        "ec2:DescribeNetworkInterfaces"
      ],
      "Resource": "*"
    },
    {
      "Sid": "SSMParameterAccess",
      "Effect": "Allow",
      "Action": [
        "ssm:GetParameter",
        "ssm:GetParameters",
        "ssm:PutParameter"
      ],
      "Resource": [
        "arn:aws:ssm:*:*:parameter/picasso/*",
        "arn:aws:ssm:*:*:parameter/myrecruiter/*"
      ]
    }
  ]
}