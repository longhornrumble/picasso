{
  "scripts": {
    "test:environment-validation": "node tests/environment-validation/run-validation-suite.js",
    "test:environment-validation:watch": "vitest tests/environment-validation --watch",
    "test:environment-isolation": "vitest tests/environment-validation/environment-isolation-test-suite.test.js --run",
    "test:build-process": "vitest tests/environment-validation/build-process-validation.test.js --run",
    "test:regression-prevention": "vitest tests/environment-validation/regression-prevention-framework.test.js --run",
    "validate:staging-deployment": "npm run test:environment-validation && echo '✅ Staging deployment validation passed'",
    "validate:production-deployment": "npm run test:environment-validation && npm test && echo '✅ Production deployment validation passed'",
    "validate:pre-commit": "npm run test:environment-isolation",
    "validate:ci": "npm run test:environment-validation --ci",
    "build:staging": "NODE_ENV=production VITE_ENVIRONMENT=staging vite build",
    "build:production": "NODE_ENV=production VITE_ENVIRONMENT=production vite build",
    "deploy:staging:safe": "npm run validate:staging-deployment && ./deploy-staging.sh",
    "deploy:production:safe": "npm run validate:production-deployment && ./deploy-production.sh"
  },
  "config": {
    "environmentValidation": {
      "requiredCoverage": 95,
      "criticalTestFailureTolerance": 0,
      "deploymentBlockingEnabled": true,
      "realTimeMonitoringEnabled": true
    }
  }
}