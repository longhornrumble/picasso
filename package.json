{
  "name": "picasso-widget",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "description": "Picasso iframe-based chat widget for complete CSS isolation",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:production": "npm run clean && NODE_ENV=production vite build",
    "build:iframe": "npm run build:production",
    "build:all": "npm run build:production && cp public/fullpage.html dist/fullpage.html",
    "clean": "rm -rf dist",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "serve": "npx serve dist -p 3000 --cors",
    "test:build": "npm run build:production && npm run serve",
    "analyze": "npx vite-bundle-analyzer dist",
    "size": "npm run build && bundlesize",
    "deploy:staging": "./deploy-staging.sh",
    "deploy:production": "./deploy-production.sh",
    "deploy:staging:old": "npm run build:all && aws s3 sync dist/ s3://picasso-staging --delete",
    "deploy:production:old": "npm run build:all && aws s3 sync dist/ s3://picasso-production --delete"
  },
  "dependencies": {
    "dompurify": "^3.1.6",
    "lucide-react": "^0.263.1",
    "marked": "^14.0.0",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/ui": "^2.1.8",
    "bundlesize": "^0.18.1",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "jsdom": "^25.0.1",
    "terser": "^5.27.0",
    "vite": "^6.3.5",
    "vitest": "^2.1.8"
  },
  "bundlesize": [
    {
      "path": "dist/widget.js",
      "maxSize": "150 kB",
      "compression": "gzip"
    },
    {
      "path": "dist/assets/*.js",
      "maxSize": "100 kB",
      "compression": "gzip"
    }
  ],
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "keywords": [
    "chat",
    "widget",
    "iframe",
    "react",
    "css-isolation"
  ],
  "author": "MyRecruiter",
  "license": "UNLICENSED"
}
