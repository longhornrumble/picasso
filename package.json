{
  "name": "picasso-widget",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "description": "Picasso iframe-based chat widget for complete CSS isolation",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:production": "npm run clean && NODE_ENV=production vite build",
    "build:iframe": "npm run build:production",
    "clean": "rm -rf dist",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "serve": "npx serve dist -p 3000 --cors",
    "test:build": "npm run build:production && npm run serve"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/ui": "^2.1.8",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "jsdom": "^25.0.1",
    "vite": "^6.3.5",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "chat",
    "widget",
    "iframe",
    "react",
    "css-isolation"
  ],
  "author": "MyRecruiter",
  "license": "UNLICENSED"
}
