{
  "name": "picasso-widget",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "description": "Picasso iframe-based chat widget for complete CSS isolation",
  "scripts": {
    "dev": "BUILD_ENV=development node esbuild.config.mjs --serve",
    "build": "npm run build:production",
    "build:staging": "BUILD_ENV=staging node esbuild.config.mjs",
    "build:production": "BUILD_ENV=production node esbuild.config.mjs",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "analyze": "ANALYZE=true BUILD_ENV=production node esbuild.config.mjs",
    "deploy:staging": "npm run build:staging && aws s3 sync dist/staging/ s3://picassostaging/ --delete",
    "deploy:production:all": "./deploy-all-production.sh",
    "deploy:production:frontend": "npm run build:production && aws s3 sync dist/production/ s3://picassocode/ --delete",
    "deploy:production:lambda": "./deploy-lambdas-production.sh",
    "pre-production": "./pre-production-validation.sh",
    "make-ready": "./make-production-ready.sh",
    "security": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix"
  },
  "dependencies": {
    "@aws-sdk/client-lambda": "^3.865.0",
    "dompurify": "^3.1.6",
    "lucide-react": "^0.263.1",
    "marked": "^14.0.0",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-react": "^7.24.7",
    "@eslint/js": "^9.17.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^5.0.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "bundlesize": "^0.18.1",
    "esbuild": "^0.25.9",
    "esbuild-plugin-inline-image": "^0.0.9",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^25.0.1",
    "terser": "^5.27.0",
    "vite": "^7.1.2",
    "vite-plugin-css-injected-by-js": "^3.5.2"
  },
  "bundlesize": [
    {
      "path": "dist/widget.js",
      "maxSize": "150 kB",
      "compression": "gzip"
    },
    {
      "path": "dist/assets/*.js",
      "maxSize": "100 kB",
      "compression": "gzip"
    }
  ],
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "keywords": [
    "chat",
    "widget",
    "iframe",
    "react",
    "css-isolation"
  ],
  "author": "MyRecruiter",
  "license": "UNLICENSED"
}
