{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "ProductionAccessElevation",
      "Effect": "Allow",
      "Action": [
        "lambda:UpdateFunctionCode",
        "lambda:UpdateFunctionConfiguration",
        "lambda:PublishVersion",
        "lambda:CreateAlias",
        "lambda:UpdateAlias",
        "s3:PutObject",
        "s3:DeleteObject",
        "cloudfront:CreateInvalidation"
      ],
      "Resource": [
        "arn:aws:lambda:*:*:function:Master_Function",
        "arn:aws:lambda:*:*:function:deploy_tenant_stack", 
        "arn:aws:s3:::myrecruiter-picasso",
        "arn:aws:s3:::myrecruiter-picasso/*",
        "arn:aws:cloudfront::*:distribution/*"
      ],
      "Condition": {
        "StringEquals": {
          "aws:RequestedRegion": "us-east-1"
        },
        "StringLike": {
          "aws:userid": "AIDACKCEVSQ6C2EXAMPLE:*"
        },
        "Bool": {
          "aws:MultiFactorAuthPresent": "true"
        },
        "DateGreaterThan": {
          "aws:CurrentTime": "2025-01-01T00:00:00Z"
        },
        "DateLessThan": {
          "aws:CurrentTime": "2025-12-31T23:59:59Z"
        }
      }
    }
  ]
}