{
  "name": "picasso-widget",
  "version": "1.0.0",
  "description": "Multi-tenant AI chatbot widget",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:widget": "vite --mode widget",
    
    "build": "vite build",
    "build:widget": "vite build --mode production",
    "build:css": "vite build --mode css-only", 
    "build:fullpage": "npm run build:widget && cp public/fullpage.html dist/fullpage.html",
    "build:all": "npm run build:widget && npm run build:css && npm run build:fullpage",
    
    "preview": "vite preview",
    "preview:widget": "vite preview --port 4173",
    
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    
    "analyze": "npx vite-bundle-analyzer dist",
    "size": "npm run build && bundlesize",
    
    "deploy:staging": "npm run build:all && aws s3 sync dist/ s3://picasso-staging --delete",
    "deploy:production": "npm run build:all && aws s3 sync dist/ s3://picasso-production --delete",
    
    "serve:local": "python3 -m http.server 8080 -d dist",
    "test:widget": "npm run build:all && npm run serve:local"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "marked": "^11.1.1",
    "dompurify": "^3.0.7",
    "lucide-react": "^0.263.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "vite": "^5.1.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "vitest": "^1.2.2",
    "bundlesize": "^0.18.1",
    "terser": "^5.27.0"
  },
  "bundlesize": [
    {
      "path": "dist/widget.js",
      "maxSize": "150 kB",
      "compression": "gzip"
    },
    {
      "path": "dist/assets/*.js",
      "maxSize": "100 kB",
      "compression": "gzip"
    }
  ],
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}